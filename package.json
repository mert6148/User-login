    "createSessionResponse": {
      "success": true,
      "session_id": "b2c3d4e5-f6a7-8901-bcde-f23456789012",
      "username": "charlie",
      "expires_at": "2025-11-26T22:52:07Z"
    },
    "logs": [
      {
        "id": 1,
        "username": "alice",
        "event_type": "login",
        "timestamp": "2025-11-28T12:00:00Z",
        "ip_address": "192.168.1.100",
        "status": "success"
      },
      {
        "id": 2,
        "username": "bob",
        "event_type": "logout",
        "timestamp": "2025-11-28T12:05:00Z",
        "ip_address": "192.168.1.101",
        "status": "success"
      }
    ],
    "rootEndpoint": {
      "name": "User Login System API",
      "version": "2.0.0",
      "description": "Full-featured REST API for User Login System",
      "endpoints": {
        "health": "/api/v1/health",
        "users": "/api/v1/users",
        "auth": {
          "login": "POST /api/v1/auth/login",
          "logout": "POST /api/v1/auth/logout"
        },
        "attributes": {
          "get_all": "GET /api/v1/users/<username>/attributes",
          "get_one": "GET /api/v1/users/<username>/attributes/<attribute_name>",
          "set": "POST /api/v1/users/<username>/attributes",
          "delete": "DELETE /api/v1/users/<username>/attributes/<attribute_name>"
        },
        "sessions": "/api/v1/sessions",
        "logs": "/api/v1/logs"
      }
    }
  }
}
