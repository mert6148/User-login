                      "set": "POST /api/v1/users/<username>/attributes",
                      "delete": "DELETE /api/v1/users/<username>/attributes/<attribute_name>"
                    },
                    "sessions": "/api/v1/sessions",
                    "logs": "/api/v1/logs"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
