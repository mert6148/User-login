    "/api/v1/logs": {
      "get": {
        "tags": ["Logs"],
        "summary": "Get login logs",
        "description": "Retrieve login and activity logs with filtering options",
        "operationId": "getLogs",
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "schema": {"type": "string"},
            "description": "Filter by username"
          },
          {
            "name": "event_type",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["login", "logout", "failed_login", "all"]
            },
            "description": "Filter by event type"
          },
          {
            "name": "start_date",
            "in": "query",
            "schema": {"type": "string", "format": "date-time"},
            "description": "Start date for filtering"
          },
          {
            "name": "end_date",
            "in": "query",
            "schema": {"type": "string", "format": "date-time"},
            "description": "End date for filtering"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {"type": "integer", "minimum": 1, "maximum": 1000, "default": 100},
            "description": "Maximum number of logs to return"
          }
        ],
        "responses": {
          "200": {
            "description": "Logs list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "logs": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {"type": "integer"},
                          "username": {"type": "string"},
                          "event_type": {"type": "string"},
                          "timestamp": {"type": "string", "format": "date-time"},
                          "ip_address": {"type": "string"},
                          "user_agent": {"type": "string"},
                          "status": {"type": "string"}
                        }
                      }
                    },
                    "total": {"type": "integer"}
                  }
                },
                "example": {
                  "success": true,
                  "logs": [
                    {"id": 1, "username": "alice", "event_type": "login", "timestamp": "2025-11-28T12:00:00Z", "ip_address": "192.168.1.100", "status": "success"},
                    {"id": 2, "username": "bob", "event_type": "logout", "timestamp": "2025-11-28T12:05:00Z", "ip_address": "192.168.1.101", "status": "success"}
                  ],
                  "total": 2
                }
              }
            }
          }
        },
        "security": [{"BearerAuth": []}]
      }
    },
    "/": {
      "get": {
        "tags": ["Health"],
        "summary": "Root endpoint / API info",
